# ============================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ============================================
# Copy this file to .dev.vars for local development
# For production, set these as Cloudflare Worker secrets/environment variables

# Environment (development, staging, production)
ENVIRONMENT=development

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Session duration in seconds (default: 3600 = 1 hour)
SESSION_DURATION=3600

# Maximum login attempts before lockout (default: 5)
MAX_LOGIN_ATTEMPTS=5

# Lockout duration in seconds (default: 900 = 15 minutes)
LOCKOUT_DURATION=900

# Minimum password length (default: 8)
PASSWORD_MIN_LENGTH=8

# ============================================
# COOKIE CONFIGURATION
# ============================================

# Cookie name for session management (default: __Secure-auth)
COOKIE_NAME=__Secure-auth

# Cookie domain (leave empty for same-domain only, or set to your domain like '.robertjames.nyc')
COOKIE_DOMAIN=

# ============================================
# ORIGIN SERVER CONFIGURATION
# ============================================

# Local development origin URL (used when ENVIRONMENT=development)
DEV_ORIGIN_URL=http://localhost:3000

# Production domain for routing
PRODUCTION_DOMAIN=robertjames.nyc

# ============================================
# PROTECTED PATHS
# ============================================

# Comma-separated list of paths requiring authentication (default: /portfolio/)
PROTECTED_PATHS=/portfolio/

# ============================================
# PORTFOLIO PROJECT PASSWORDS
# ============================================
# Generate hashes using: node hash-password.js "YourPassword123!"

PASSWORD_HASH_CORTEVA=your-hash-here
PASSWORD_HASH_MICROSOFT=your-hash-here
PASSWORD_HASH_BANK_OF_AMERICA=your-hash-here
PASSWORD_HASH_ROYAL_CARIBBEAN=your-hash-here
PASSWORD_HASH_WEBER_SHANDWICK=your-hash-here
PASSWORD_HASH_MACMILLAN=your-hash-here
PASSWORD_HASH_GUARDIAN=your-hash-here
PASSWORD_HASH_SBE=your-hash-here
